<footer class='c-footer'>
  <div class='o-grid'>

    {{#if @labs.subscribers}}
      <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-3-l'>
        <p class='c-footer__headline'>{{t 'Newsletter' }}</p>

        {{  subscribe_form
            form_class='c-subscribe-form'
            input_class='c-subscribe-form__input'
            input_lebel='c-subscribe-form__lebel'
            placeholder=(t 'Email')
            button_class='c-subscribe-form__btn c-btn c-btn--small c-btn--full'
        }}
      </div>
    {{/if}}

    <div class='o-grid__col o-grid__col--full'>
      <div class='c-footer__bottom'>
        <div class='o-grid'>

          <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m'>
            <div class='u-font-size-tiny c-footer__copyright'>
              &copy; {{ date format='YYYY' }} {{ @site.title }}
            </div>
          </div>

          <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m'>
            {{> social-icons }}
          </div>

        </div>
      </div>
    </div>

  </div>
</footer>
